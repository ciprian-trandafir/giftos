<div class="col-sm-6 col-md-4 col-lg-3">
    <div class="box rounded">
        <a href="{{ path('app_product', {'id': product.id, 'slug': product.slug}) }}">
            <div class="img-box">
                <img src="{% if product.picture %}{{ asset('img/p/' ~ product.picture) }}{% else %}{{ asset('img/p/default.png') }}{% endif %}"
                     alt="{{ product.name }}">
            </div>
            <div class="detail-box">
                <h6>
                    {{ product.name }}
                </h6>
                <h6>
                    Price
                    <span>
                        ${{ product.price }}
                    </span>
                </h6>
            </div>
            <div class="new">
                <span>
                    New
                </span>
            </div>
        </a>
    </div>
</div>
