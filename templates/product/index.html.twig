                        <div class="carousel-inner imageContainer">
                            <img class="imageWrapper"
                                    src="{% if product.picture %}{{ asset('img/p/' ~ product.picture) }}{% else %}{{ asset('img/p/default.png') }}{% endif %}"
                                    alt="{{ product.name }}">
                        </div>
                    </div>
                </div>
                <div class="col-lg mb-30">
                    <div class="customPadding">
                        <h3 class="productTitle">{{ product.getName }}</h3>
                        <h3 class="productPrice pb-4">${{ product.getPrice }}</h3>
                        <div class="divider"></div>
                        {% if app.user is defined and app.user is not null %}
                            <div class="d-flex align-items-center mb-4 pt-4">
                                <button class="btn btn-primary px-3 btn-add-to-cart" data-id="{{ product.getId }}">
                                    <i class="fa fa-shopping-cart mr-1"></i>
                                    Add To Cart
                                </button>
                            </div>
                            <div>
                                <div class="alert alert-success add-to-cart-success">
                                    Product successfully added to cart
                                </div>
                            </div>
                        {% endif %}
                        <div class="productDescription">
                            {% if product.getDescriptionShort %}{{ product.getDescriptionShort | raw }}{% endif %}
                        </div>
                    </div>
                </div>
            </div>
