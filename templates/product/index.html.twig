{% extends 'base.html.twig' %}

{% block title %}
    <title>{{ product.name }}</title>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" type="text/css" href="{{ asset('assets/product/css/style.css') }}"/>
{% endblock %}

{% block body %}
