{% extends 'base.html.twig' %}

{% block title %}
    <title>Login</title>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('assets/login-register/css/style.css') }}"/>
{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4">Sign In</h3>
                        <form method="post" class="form-signin login-form">
                            <div class="form-group">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                       class="form-control rounded-left" placeholder="Email" required>
                            </div>
                            <div class="form-group d-flex">
                                <input type="password" name="password" id="inputPassword"
                                       class="form-control rounded-left" placeholder="Password"
                                       required>
                            </div>
                            <div class="form-group">
                                <button type="submit"
                                        class="form-control btn btn-primary rounded submit px-3">Login
                                </button>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-center">
                                    No account?
                                    <a href="{{ path('app_register') }}">Sign UP</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block footer %}
{% endblock %}
